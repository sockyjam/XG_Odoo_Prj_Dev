<odoo>
  <data>

    <!--劳务人员列表-->
    <record id="view_xglabor_labor_tree" model="ir.ui.view">
        <field name="name">view.xglabor.labor.tree</field>
        <field name="model">xglabor.labor</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="XGLaborLaborTree">
                <field name="number"  />
                <field name="name"  />
                <field name="sex"  />
                <field name="telephone"  />
                <field name="labor_type"  />
            </tree>
        </field>
    </record>

    <!--劳务人员表单-->
    <record id="view_xglabor_labor_form" model="ir.ui.view">
        <field name="name">view.xglabor.labor.form</field>
        <field name="model">xglabor.labor</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <form string="XGLaborLaborForm">
                <sheet>
                        <h1>
                            <field name="number" readonly="1"/>
                        </h1>
                        <p></p>
                    <group col="4">
                        <field name="name"  />
                        <field name="birthday" />
                        <field name="native_place_province" placeholder="省份" />
                        <field name="native_place_city"  placeholder="城市"/>
                        <field name="sex" />
                        <field name="telephone" />
                        <field name="idcard" />
                        <field name="has_sick_history" />
                        <field name="sick_history" />
                        <field name="emergency_contact_person" />
                        <field name="emergency_contact_telephone"  />
                        <field name="home_address"  />
                        <field name="marital_status"  />
                        <field name="children_num"  />
                        <field name="labor_type"  />
                        <field name="pay_type"  />
                        <field name="grade"  />
                        <field name="is_direct"  />
                        <field name="direct_company"  />
                    </group>
                </sheet>
                <sheet>
                    <group col="4">
                        <field name="idcard_front" widget='image' class="oe_avatar"/>
                        <field name="idcard_reverse" widget='image' class="oe_avatar" />
                        <field name="head_pic" widget='image' class="oe_avatar" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--工单列表-->
    <record id="view_xglabor_work_order_tree" model="ir.ui.view">
        <field name="name">view.xglabor.work.order.tree</field>
        <field name="model">xglabor.workorder</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="XGLaborWorkOrderTree">
                <field name="number"  />
                <field name="work_place"  />
                <field name="company"  />
                <field name="start_time"  />
                <field name="end_time"  />
            </tree>
        </field>
    </record>

    <!--工单表单-->
    <record id="view_xglabor_work_order_form" model="ir.ui.view">
        <field name="name">view.xglabor.work.order.form</field>
        <field name="model">xglabor.workorder</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <form string="XGLaborWorkOrderForm">
                <!--<button name="button_confirm" states="new, workover" string="确认工单" type="object" class="oe_highlight"/>-->
                <sheet>
                    <h1>
                        <field name="number" readonly="1"/>
                    </h1>
                    <group col="4">
                        <field name="start_time" />
                        <field name="end_time" />
                        <field name="company"  />
                        <field name="work_place"  />
                        <field name="confirm_person" readonly="True"/>
                    </group>
                </sheet>
                <sheet>
                    <group col="4">
                        <p>任务列表</p>
                        <field name="jobs" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Job任务列表-->
    <record id="view_xglabor_job_tree" model="ir.ui.view">
        <field name="name">view.xglabor.job.tree</field>
        <field name="model">xglabor.job</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="XGLaborJobTree">
                <field name="person"  />
                <field name="type"  />
                <field name="pay_type"  />
            </tree>
        </field>
    </record>

    <!--Job任务表单-->
    <record id="view_xglabor_job_form" model="ir.ui.view">
        <field name="name">view.xglabor.job.form</field>
        <field name="model">xglabor.job</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <form string="XGLaborJobForm">
                <sheet>
                    <group col="4">
                        <field name="person"  />
                        <field name="type"  />
                        <field name="pay_type" />
                        <field name="state" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>




  </data>
</odoo>