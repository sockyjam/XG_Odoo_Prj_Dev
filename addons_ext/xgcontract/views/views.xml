<odoo>
    <data>

        <!--采购合同-->

        <!--tree-->
        <record id="view_tree_contract_purchase" model="ir.ui.view">
            <field name="name">view_tree_contract_purchase</field>
            <field name="model">xgcontract.xgcontract</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="view_tree_contract_purchase" decoration-danger="is_expired">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="start"/>
                    <field name="end"/>
                    <field name="is_expired" invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="action_tree_binding_purchase" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_contract_purchase"/>
            <field name="act_window_id" ref="action_contract_purchase"/>
        </record>

        <!--kanban-->
        <record id="view_kanban_contract_purchase" model="ir.ui.view">
            <field name="name">view_kanban_contract_purchase</field>
            <field name="model">xgcontract.xgcontract</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <a type="open">
                                    <t>合同：</t>
                                    <field name="name"/>
                                    <t>
                                        <br/>
                                    </t>
                                    <t>状态：</t>
                                    <field name="state"/>
                                    <t>
                                        <br/>
                                    </t>
                                    <t>开始时间：</t>
                                    <field name="start"/>
                                    <t>
                                        <br/>
                                    </t>
                                    <t>到期时间：</t>
                                    <field name="end"/>
                                    <t>
                                        <br/>
                                    </t>
                                    <t>合同附件：</t>
                                    <field name="file"/>
                                </a>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_tree_binding_purchase" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_kanban_contract_purchase"/>
            <field name="act_window_id" ref="action_contract_purchase"/>
        </record>


        <!--form-->
        <record id="view_form_contract_purchase" model="ir.ui.view">
            <field name="name">view_form_contract_purchase</field>
            <field name="model">xgcontract.xgcontract</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="view_form_contract_purchase">
                    <sheet>
                        <group col="4">
                            <field name="name" placeholder="合同名称"/>
                            <field name="state" placeholder="合同状态"/>
                            <field name="start" placeholder="开始时间"/>
                            <field name="end" placeholder="结束时间"/>
                            <field name="file" placeholder="上传附件" widget="image" class="oe_avatar"/>
                            <field name="category_id_p"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_form_binding_purchase" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_contract_purchase"/>
            <field name="act_window_id" ref="action_contract_purchase"/>
        </record>


        <!--销售合同**************************************************************************-->
        <!--tree-->
        <record id="view_tree_contract_market" model="ir.ui.view">
            <field name="name">view_tree_contract_market</field>
            <field name="model">xgcontract.xgcontract</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="view_tree_contract_market" decoration-danger="is_expired" editable="bottom">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="start"/>
                    <field name="end"/>
                    <field name="is_expired" invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="action_tree_binding_market" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_contract_market"/>
            <field name="act_window_id" ref="action_contract_market"/>
        </record>


        <!--form-->
        <record id="view_form_contract_market" model="ir.ui.view">
            <field name="name">view_form_contract_market</field>
            <field name="model">xgcontract.xgcontract</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="view_form_contract_market">
                    <sheet>
                        <group col="4">
                            <field name="name" placeholder="合同名称"/>
                            <field name="state" placeholder="合同状态"/>
                            <field name="start" placeholder="开始时间"/>
                            <field name="end" placeholder="结束时间"/>
                            <field name="file" placeholder="上传附件" widget="image" class="oe_avatar"/>
                            <field name="category_id_m"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_form_binding_market" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_contract_market"/>
            <field name="act_window_id" ref="action_contract_market"/>
        </record>


        <!--公司**************************************************************************-->

        <!--tree-->
        <record id="view_tree_contract_company" model="ir.ui.view">
            <field name="name">view_tree_contract_company</field>
            <field name="model">company.company</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree string="view_tree_contract_company">
                    <field name="name"/>
                    <field name="person"/>
                </tree>
            </field>
        </record>

        <record id="action_tree_binding_company" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_tree_contract_company"/>
            <field name="act_window_id" ref="action_contract_company"/>
        </record>


        <!--form-->
        <record id="view_form_contract_company" model="ir.ui.view">
            <field name="name">view_form_contract_company</field>
            <field name="model">company.company</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="view_form_contract_company">
                    <sheet>
                        <group col="4">
                            <field name="name" placeholder="公司名称"/>
                            <field name="person" placeholder="法人代表"/>
                            <field name="company_ids_p"/>
                            <field name="company_ids_m"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_form_binding_company" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_contract_company"/>
            <field name="act_window_id" ref="action_contract_company"/>
        </record>

    </data>
</odoo>