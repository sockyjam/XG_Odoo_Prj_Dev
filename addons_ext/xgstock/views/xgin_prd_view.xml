<odoo>
    <data>
        <!-- 入库预报 tree-->
        <record model="ir.ui.view" id="view_xgstock_xgin_prd_tree">
            <field name="name">view.xgstock.xgin.prd.tree</field>
            <field name="model">xgstock.xgin_prd</field>
            <field name="arch" type="xml">
                <!--decoration-danger 红色  decoration-info 蓝色 decoration-muted 灰色  decoration-primary 紫色 decoration-success 绿色  decoration-warning  黄色 -->
                <tree string="XGStockXGInPRDTree" decoration-danger="state == 'pending'">
                    <field name="PRD_uuid"/>
                    <field name="supplier"/>
                    <field name="order_making_time"/>
                    <field name="expected_warehousing_time"/>
                    <field name="PRD_create_user"/>
                    <field name="state"/>


                </tree>
            </field>
        </record>

        <record id="action_xgstock_xgin_prd_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_xgstock_xgin_prd_tree"/>
            <field name="act_window_id" ref="action_xgstock_xgin_prd"/>
        </record>


        <record model="ir.ui.view" id="view_xgstock_xgin_prd_form">
            <field name="name">view.xgstock.xgin.prd.form</field>
            <field name="model">xgstock.xgin_prd</field>
            <field name="arch" type="xml">
                <!--decoration-danger 红色  decoration-info 蓝色 decoration-muted 灰色  decoration-primary 紫色 decoration-success 绿色  decoration-warning  黄色 -->
                <form string="XGStockXGInPRDForm">
                    <sheet>
                        <header>
                            <button name="button_pending" states="pending" string="预报审批通过" type="object"
                                    class="oe_highlight" groups="xgstock.group_xgstock_accepting"/>

                            <field name="state" widget="statusbar" statusbar_visible="pending,adopt" readonly="1"/>
                        </header>

                        <div class="oe_title">
                            <h1>
                                <field name="PRD_uuid" readonly="1"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="supplier"/>
                            <field name="expected_warehousing_time"/>


                        </group>
                        <group>
                            <field name="xgproduct_order_lines"/>

                        </group>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="sums" />
                            <!--<div class="oe_subtotal_footer_separator oe_inline">-->
                                <!--<label for="sums" widget="monetary" />-->
                            <!--</div>-->
                            <div class="oe_clear"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_xgstock_xgin_prd_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_xgstock_xgin_prd_form"/>
            <field name="act_window_id" ref="action_xgstock_xgin_prd"/>

        </record>
        <!-- 中间关联视图 order.line -->

        <record model="ir.ui.view" id="view_xgstock_xgin_prd_order_line_tree">
            <field name="name">view.xgstock.xgin.prd.order.line.tree</field>
            <field name="model">xgstock.xgin.prd.order.line</field>
            <field name="arch" type="xml">
                <tree string="XGHrJobManagementLineTree" editable="bottom">
                    <field name="xgproduct_line"/>
                    <field name="purchase_pirce"/>
                    <field name="product_num"/>
                    <field name="product_pirce"/>

                    <field name="xgin_prd_line" invisible="1"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>