<odoo>
    <data>
        <!-- 入库预报 tree-->
        <record model="ir.ui.view" id="view_xgstock_picking_tree">
            <field name="name">view.xgstock.picking.tree</field>
            <field name="model">xgstock.picking</field>
            <field name="arch" type="xml">
                <!--decoration-danger 红色  decoration-info 蓝色 decoration-muted 灰色  decoration-primary 紫色 decoration-success 绿色  decoration-warning  黄色 -->
                <tree string="XGStockPickingTree">
                    <field name="PRD_uuid"/>
                    <field name="supplier"/>
                    <field name="order_making_time"/>
                    <field name="expected_warehousing_time"/>
                    <field name="PRD_create_user"/>
                    <field name="xgstock_position_id"/>
                    <field name="xgstock_task_group"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="action_xgstock_picking_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_xgstock_picking_tree"/>
            <field name="act_window_id" ref="action_xgstock_picking"/>
        </record>


          <record model="ir.ui.view" id="view_xgstock_picking_form">
              <field name="name">view.xgstock.picking.form</field>
              <field name="model">xgstock.picking</field>
              <field name="arch" type="xml">
                  <!--decoration-danger 红色  decoration-info 蓝色 decoration-muted 灰色  decoration-primary 紫色 decoration-success 绿色  decoration-warning  黄色 -->
                  <form string="XGStockPickingForm">
                      <sheet>
                          <header>
                              <button name="button_not_start" states="notStart" string="发送调度员" type="object"
                                      class="oe_highlight" groups="xgstock.group_xgstock_accepting"/>

                              <button name="button_start" states="distributionEnd" string="入库审核" type="object"
                                      class="oe_highlight" groups="xgstock.group_xgstock_accepting"/>

                              <button name="button_distribution" states="distribution" string="工单分配完成" type="object"
                                      class="oe_highlight" groups="xgstock.group_xgstock_allocation"/>

                              <field name="state" widget="statusbar" statusbar_visible="notStart,distribution,start" readonly="1"/>
                          </header>

                          <div class="oe_title">
                              <h1>
                                  <field name="PRD_uuid" readonly="1"/>
                              </h1>
                          </div>
                          <group col="4">
                              <field name="supplier"  readonly="1"/>
                              <field name="expected_warehousing_time"  readonly="1"/>


                          </group>
                          <group>
                              <field name="xgproduct_order_lines"  readonly="1"/>

                          </group>
                          <group >
                              <field name="xgstock_position_id" attrs="{'invisible':[('state','=','notStart')]}" readonly="1" groups="xgstock.group_xgstock_accepting"/>
                              <field name="xgstock_position_id" groups="xgstock.group_xgstock_allocation"/>
                              <field name="xgstock_task_group" attrs="{'invisible':[('state','=','notStart')]}" readonly="1" groups="xgstock.group_xgstock_accepting"/>
                              <field name="xgstock_task_group" groups="xgstock.group_xgstock_allocation"/>
                          </group>

                          <group class="oe_subtotal_footer oe_right">
                              <field name="sums"  readonly="1"/>
                              <!--<div class="oe_subtotal_footer_separator oe_inline">-->
                                  <!--<label for="sums" widget="monetary" />-->
                              <!--</div>-->
                              <div class="oe_clear"/>
                          </group>

                      </sheet>
                  </form>
              </field>
          </record>

          <record id="action_xgstock_picking_form" model="ir.actions.act_window.view">
              <field name="sequence" eval="1"/>
              <field name="view_mode">form</field>
              <field name="view_id" ref="view_xgstock_picking_form"/>
              <field name="act_window_id" ref="action_xgstock_picking"/>

          </record>

    </data>
</odoo>