<odoo>
    <data>
        <!-- 入库申请 tree-->
        <record model="ir.ui.view" id="view_xgstock_xgout_apply_tree">
            <field name="name">view.xgstock.xgout.apply.tree</field>
            <field name="model">xgstock.xgout_prd</field>
            <field name="arch" type="xml">
                <tree string="XGStockXGOutApplyTree"  decoration-danger="state == 'adopt'">
                    <field name="PRD_uuid"/>
                    <field name="supplier"/>
                    <field name="order_making_time"/>
                    <field name="expected_warehousing_time"/>
                    <field name="PRD_create_user"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_xgstock_xgout_apply_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_xgstock_xgout_apply_tree"/>
            <field name="act_window_id" ref="action_xgstock_xgout_apply"/>
        </record>

        <record model="ir.ui.view" id="view_xgstock_xgout_apply_form">
            <field name="name">view.xgstock.xgout.apply.form</field>
            <field name="model">xgstock.xgout_prd</field>
            <field name="arch" type="xml">
                <!--decoration-danger 红色  decoration-info 蓝色 decoration-muted 灰色  decoration-primary 紫色 decoration-success 绿色  decoration-warning  黄色 -->
                <form string="XGStockXGOutApplyForm">
                    <sheet>
                        <header>
                            <button name="button_adopt" states="adopt" string="确认出库" type="object"
                                    class="oe_highlight" />
                            <field name="state" widget="statusbar" statusbar_visible="adopt,warehousing" readonly="1"/>
                        </header>

                        <div class="oe_title">
                            <h1>
                                <field name="PRD_uuid" readonly="1"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="supplier" readonly="1"/>
                            <field name="expected_warehousing_time" readonly="1"/>
                        </group>
                        <group>
                            <field name="xgproduct_order_lines" readonly="1"/>
                        </group>


                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_xgstock_xgout_apply_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_xgstock_xgout_apply_form"/>
            <field name="act_window_id" ref="action_xgstock_xgout_apply"/>
        </record>

    </data>
</odoo>