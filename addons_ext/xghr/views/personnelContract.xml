<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="personnelContract_list">
      <field name="name">personnel.contract.list</field>
      <field name="model">personnel.contract</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="image_medium" widget="image" class="oe_avatar"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="personnelContract_action_window">
      <field name="name">人员合同</field>
      <field name="res_model">personnel.contract</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>
<!-- 添加 groups = '分组id  视图控制权限'-->
     <menuitem name="人员合同" id="xghr_personnelContract_menu" parent="xghr_menu_root"
      action="personnelContract_action_window" groups="group_xghr_user" />
  </data>
</odoo>