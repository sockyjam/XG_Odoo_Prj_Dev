<odoo>
  <data>
    <!-- 人员登记 -->
     <!--tree-->
    <record model="ir.ui.view" id="view_xghr_personnel_registration_tree">
      <field name="name">view.xghr.personnel.registration.tree</field>
      <field name="model">personnel.registration</field>
      <field name="arch" type="xml">
        <tree string="XGHrPersonnelRegistrationTree">
          <field name="name" placeholder="人员名称" />
          <field name="state_id" placeholder="省份" />
          <field name="city"  placeholder="城市"/>
          <field name="street"  placeholder="街道地址"/>
          <field name="zip"  placeholder="邮编"/>
          <field name="email"  placeholder="电子邮箱"/>
          <field name="phone"  placeholder="座机电话"/>
          <field name="mobile"  placeholder="移动电话"/>
          <field name="personnel_id"/>
        </tree>
      </field>
    </record>

    <record id="action_xghr_personnel_registration_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_xghr_personnel_registration_tree"/>
        <field name="act_window_id" ref="action_xghr_personnel_registration"/>
    </record>


      <!-- from  -->
    <record model="ir.ui.view" id="view_xghr_personnel_registration_form">
      <field name="name">view.xghr.personnel.registration.form</field>
      <field name="model">personnel.registration</field>
      <field name="arch" type="xml">
        <form string="XGHrPersonnelRegistrationFrom">
           <sheet>
              <group col="4">
                <field name="name" placeholder="人员名称" />
                <field name="state_id" placeholder="省份" />
                <field name="city"  placeholder="城市"/>
                <field name="street"  placeholder="街道地址"/>
                <field name="zip"  placeholder="邮编"/>
                <field name="email"  placeholder="电子邮箱"/>
                <field name="phone"  placeholder="座机电话"/>
                <field name="mobile"  placeholder="移动电话"/>
                  <!--<field name="login"/>-->
                  <field name="company_id"/>
                <field name="personnel_id"/>
                <field name="image"  widget='image' class="oe_avatar"/>
              </group>
           </sheet>
        </form>
      </field>
    </record>

    <record id="action_xghr_personnel_registration_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_xghr_personnel_registration_form"/>
        <field name="act_window_id" ref="action_xghr_personnel_registration"/>
    </record>

     <!-- 人员分组 -->
        <!--tree-->
    <record model="ir.ui.view" id="view_xghr_personnel_group_tree">
      <field name="name">view.xghr.personnel.group.tree</field>
      <field name="model">personnel.group</field>
      <field name="arch" type="xml">
        <tree string="XGHrPersonnelGroupTree">
          <field name="group_name" placeholder="组名称" />
        </tree>
      </field>
    </record>


    <record id="action_xghr_personnel_group_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_xghr_personnel_group_tree"/>
        <field name="act_window_id" ref="action_xghr_personnel_group"/>
    </record>
        <!--form-->
    <record model="ir.ui.view" id="view_xghr_personnel_group_form">
      <field name="name">view.xghr.personnel.group.form</field>
      <field name="model">personnel.group</field>
      <field name="arch" type="xml">
        <form string="XGHrPersonnelGroupForm">
             <sheet>
                  <group col="2">
                      <field name="group_name" placeholder="组名称" />
                  </group>
             </sheet>
        </form>
      </field>
    </record>


    <record id="action_xghr_personnel_group_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_xghr_personnel_group_form"/>
        <field name="act_window_id" ref="action_xghr_personnel_group"/>
    </record>

  </data>
</odoo>